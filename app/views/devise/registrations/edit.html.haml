.container
  .row
    .span6.offset3
      %h2= current_user == @user ? 'Edit your profile' : "Edit #{resource_name.to_s.humanize}"
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f|
        = devise_error_messages!
        .control-group
          %label.control-label Name
          .controls
            = f.text_field :name
        .control-group
          %label.control-label Email
          .controls
            = f.email_field :email
        .control-group
          %label.control-label Password
          .controls
            = f.password_field :password, :autocomplete => "off"
            %p.help-block (leave blank if you don't want to change it)
        .control-group
          %label.control-label Password Confirmation
          .controls
            = f.password_field :password_confirmation
            %p.help-block (leave blank if you don't want to change it)
        .control-group
          %label.control-label Current Password
          .controls
            = f.password_field :current_password
            %p.help-block (we need your current password to confirm your changes)

        .form-actions= f.submit "Update", :class => 'btn btn-primary'
      %h3 Cancel my account
      %p
        Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
      = link_to "Back", :back
