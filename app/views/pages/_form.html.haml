= form_for @page do |f|
  -if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :html
    = f.text_area :html
  .field
    = f.label :locked_by
    = f.number_field :locked_by
  .field
    = f.label :locked_at
    = f.datetime_select :locked_at
  .actions
    = f.submit 'Save'
