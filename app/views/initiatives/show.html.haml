.container
  .row
    .span8
      .hero-unit.green
        %h1
          #{@initiative.name}.
          %small Since #{@initiative.start_date.year}.
      .row
        .span8
          %p Lots of fun info about the initiative, etc.
    .span4
      .well.brown
        %h1 Quick Stats
        %hr
        %dl.dl-horizontal.clearfix
          %dt Countries
          %dd
          %dt Num. Volunteers
          %dd= @initiative.num_volunteers
          %dt Contact Email
          %dd= @initiative.contact_email
          %dt Site URL
          %dd= link_to truncate(@initiative.site_url, :length => 25), @initiative.site_url, :target => '_blank'
          %dt Donate URL
          %dd= link_to truncate(@initiative.donate_url, :length => 25), @initiative.donate_url, :target => '_blank'
        %p.center= link_to "Enter #{@initiative.name}", (@initiative.site_url.blank? ? initiative_home_path(@initiative) : @initiative.site_url), :class => 'btn btn-primary btn-large'
  .row
    .span12
      %ul.thumbnails
        %li.span4= link_to image_tag('http://placehold.it/370x250'), '', :class => 'thumbnail'
        %li.span4= link_to image_tag('http://placehold.it/370x250'), '', :class => 'thumbnail'
        %li.span4= link_to image_tag('http://placehold.it/370x250'), '', :class => 'thumbnail'
