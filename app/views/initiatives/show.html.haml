.container
  .row
    .span8
      .hero-unit.green
        %h1
          #{@initiative.name}
          %small a Peace Corps Initiative.
      .row
        .span8
          %p Lots of fun info about the initiative, etc.
    .span4
      .well.blue
        %h1 Quick Stats
        %hr
        %dl.dl-horizontal.clearfix
          %dt Established
          %dd= @initiative.start_date.strftime('%d %b, %Y')
          %dt Contact Email
          %dd
            = @initiative.contact_email
            &nbsp;
          %dt Site URL
          %dd
            = link_to truncate(@initiative.site_url, :length => 25), @initiative.site_url, :target => '_blank'
            &nbsp;
          %dt Donate URL
          %dd
            = link_to truncate(@initiative.donate_url, :length => 25), @initiative.donate_url, :target => '_blank'
            &nbsp;
          %dt Countries
          %dd
            - for country in @initiative.countries do
              #{link_to country.name, country},
            = link_to 'view all', countries_path
        %p.center= link_to "Enter #{@initiative.name}", (@initiative.site_url.blank? ? initiative_home_path(@initiative) : @initiative.site_url), :class => 'btn btn-large'
  .row
    .span12
      %ul.thumbnails
        %li.span4= link_to image_tag('http://static.pcsenegal.org/photos/ag1-370x250.jpg'), countries_path, :class => 'thumbnail'
        %li.span4= link_to image_tag('http://static.pcsenegal.org/photos/ag3-370x250.jpg'), countries_path, :class => 'thumbnail'
        %li.span4= link_to image_tag('http://static.pcsenegal.org/photos/ag4-370x250.jpg'), countries_path, :class => 'thumbnail'
