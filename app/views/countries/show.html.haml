.container
  .row
    .span12
      = render 'menu'
  .row
    .span8
      .hero-unit.blue
        %h1
          = @country.name
          %small Since #{@country.pc_start_date.year}.
      .row
        .span8
          %p Lots of fun info about the country, etc.
    .span4
      .well.orange
        %h1 Quick Stats
        %hr
        %dl.dl-horizontal.clearfix
          %dt Country Code
          %dd= @country.code
          %dt Current Volunteers
          %dd= @country.num_volunteers
          %dt Volunteers Served
          %dd= @country.num_total_volunteers
          %dt Contact Email
          %dd= @country.contact_email
          %dt Site URL
          %dd= link_to truncate(@country.site_url, :length => 25), @country.site_url, :target => '_blank'
          %dt Donate URL
          %dd= link_to truncate(@country.donate_url, :length => 25), @country.donate_url, :target => '_blank'
          %dt Peace Corps Since
          %dd= @country.pc_start_date.year
        %p.center= link_to "Enter Peace Corps | #{@country.name}", (@country.site_url.blank? ? country_home_path(@country) : @country.site_url), :class => 'btn btn-success btn-large'
  .row
    .span12
      %ul.thumbnails
        %li.span4= link_to image_tag('http://placehold.it/370x250'), '', :class => 'thumbnail'
        %li.span4= link_to image_tag('http://placehold.it/370x250'), '', :class => 'thumbnail'
        %li.span4= link_to image_tag('http://placehold.it/370x250'), '', :class => 'thumbnail'
