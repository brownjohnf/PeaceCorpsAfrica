= nested_form_for @country, :html => {:class => 'form-horizontal'} do |f|
  -if @country.errors.any?
    #error_explanation
      %h2= "#{pluralize(@country.errors.count, "error")} prohibited this country from being saved:"
      %ul
        - @country.errors.full_messages.each do |msg|
          %li= msg
  %legend Country Info
  .control-group
    %label.control-label Country Name
    .controls
      = f.country_select :code
  -#= f.label :page_id
  -#= f.number_field :page_id
  .control-group
    %label.control-label Contact Email
    .controls
      = f.text_field :contact_email
  .control-group
    %label.control-label Site URL
    .controls
      = f.text_field :site_url
  .control-group
    %label.control-label Donate URL
    .controls
      = f.text_field :donate_url
  .control-group
    %label.control-label Current Number of Volunteers
    .controls
      = f.text_field :num_volunteers
  .control-group
    %label.control-label Total PCVs Served
    .controls
      = f.text_field :num_total_volunteers
  .control-group
    %label.control-label Peace Corps Start Date
    .controls
      = f.text_field :pc_start_date, :class => 'datepicker'
  .control-group
    %label.control-label Active
    .controls
      = f.check_box :active
  %legend Initiatives
  = f.fields_for :country_initiatives do |ff|
    .control-group
      %span.control-label Initiative/Join Date
      .controls
        = ff.collection_select :initiative_id, Initiative.all, :id, :name
        = ff.text_field :join_date, :class => 'span1 datepicker'
        = ff.link_to_remove 'remove'
  = f.link_to_add 'add an initiative', :country_initiatives
  .control-group
    .controls
      = f.submit 'Save', :class => 'btn btn-primary'
