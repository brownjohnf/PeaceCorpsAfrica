.navbar.navbar-fixed-top
  %nav.navbar-inner
    .container-fluid
      .row-fluid
        .span12
          %a.btn-navbar{'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Peace Corps | Africa", root_path, :class => 'brand'
          .nav-collapse
            %ul.nav
              %li.dropdown
                %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
                  Countries
                  %b.caret
                %ul.dropdown-menu
                  - if can? :create, Country
                    %li
                      = link_to new_country_path do
                        %span.icon-plus
                        New country
                    %li.divider
                  %li
                    = link_to countries_path do
                      %span.icon-globe
                      Overview Map
                  %li.divider
                  - for country in Country.all do
                    %li= link_to country.name, country
          .nav-collapse.pull-right
            = form_tag '', :method => :get, :class => 'navbar-search' do
              = text_field_tag 'q', nil, :class => 'search-query', 'placeholder' => 'search'
            %ul.nav
              %li.divider-vertical
            %ul.nav
              %li.dropdown
                - if user_signed_in?
                  %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
                    = current_user.name
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to 'Sign out', destroy_user_session_path, :method=>'delete'
                    %li= link_to 'Edit account', edit_user_registration_path
                    - if current_user.has_role? :admin
                      %li= link_to 'Admin', users_path
                - else
                  %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
                    Sign in
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to 'Sign in', new_user_session_path
                    %li= link_to 'Sign up', new_user_registration_path
