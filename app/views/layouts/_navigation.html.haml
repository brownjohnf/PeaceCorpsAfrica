.navbar.navbar-fixed-top
  %nav.navbar-inner
    .container-fluid
      .row-fluid
        .span12
          %a.btn-navbar{'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Peace Corps|Africa", root_path, :class => 'brand'
          .nav-collapse
            %ul.nav
              %li= link_to 'Countries', ''
          .nav-collapse.pull-right
            = form_tag '', :method => :get, :class => 'navbar-search' do
              = text_field_tag 'q', nil, :class => 'search-query', 'placeholder' => 'search'
            %ul.nav
              - if user_signed_in?
                %li
                  = link_to 'Sign out', destroy_user_session_path, :method=>'delete'
              - else
                %li
                  = link_to 'Sign in', new_user_session_path
              - if user_signed_in?
                %li
                  = link_to 'Edit account', edit_user_registration_path
                - if current_user.has_role? :admin
                  %li
                    = link_to 'Admin', users_path
              - else
                %li
                  = link_to 'Sign up', new_user_registration_path
