= form_for @revision do |f|
  -if @revision.errors.any?
    #error_explanation
      %h2= "#{pluralize(@revision.errors.count, "error")} prohibited this revision from being saved:"
      %ul
        - @revision.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :author_id
    = f.number_field :author_id
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :page_id
    = f.number_field :page_id
  .actions
    = f.submit 'Save'
